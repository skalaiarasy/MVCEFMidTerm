@model MVCEFMidTerm.ViewModels.StudentFormViewModel
@{
    ViewBag.Title = "StudentForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Student</h2>
@using (Html.BeginForm("Update", "Students"))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Student.FirstName)
        @Html.TextBoxFor(s => s.Student.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Student.LastName)
        @Html.TextBoxFor(s => s.Student.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Student.CourseEnrolledDate)
        @Html.TextBoxFor(s => s.Student.CourseEnrolledDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Student.CourseId)
        @Html.DropDownListFor(s => s.Student.CourseId,
       new SelectList(Model.Courses, "Id", "CourseName"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Student.CourseStatus)
        @Html.DropDownListFor(s => s.Student.CourseStatus,
        new SelectList("01"), "" , new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Student.Grade)
        @Html.TextBoxFor(s => s.Student.Grade, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(s => s.Student.Id)
    <button type="submit" class="btn" btn-primary>Update</button>
}


