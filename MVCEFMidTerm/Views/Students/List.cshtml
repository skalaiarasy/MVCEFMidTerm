@model IEnumerable<MVCEFMidTerm.Models.Student>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students List</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Course Name</th>
            <th>Date Of Joining</th>
            <th>Status</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
        <tr>
            @*<td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</td>*@
            @*<td>@Html.ActionLink(student.FirstName, "Edit", "Customers", new { id = customer.Id }, null)</td>*@
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@student.Course.CourseName</td>
            <td>@student.CourseEnrolledDate</td>
            <td>@student.CourseStatus</td>
            <td>@student.Grade</td>
        </tr>
        }
    </tbody>
</table>



